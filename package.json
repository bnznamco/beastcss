{
  "private": true,
  "license": "MIT",
  "author": "Freddy Escobar <freddyescobar@hotmail.fr>",
  "workspaces": {
    "packages": [
      "./packages/*"
    ],
    "nohoist": [
      "**/css-loader",
      "**/enhanced-resolve",
      "**/file-loader",
      "**/html-webpack-plugin",
      "**/mini-css-extract-plugin",
      "**/nano-memoize",
      "**/webpack"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "scripts": {
    "build": "lerna run --stream build",
    "build:main": "lerna run --stream --scope beastcss  build",
    "build:webpack": "lerna run --stream --scope beastcss-webpack-plugin build",
    "dev": "lerna run --stream --parallel dev",
    "dev:main": "lerna run --stream --scope beastcss dev",
    "dev:webpack": "lerna run --stream --scope beastcss-webpack-plugin dev",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache .",
    "release:main": "lerna run --stream --scope beastcss release",
    "release:webpack": "lerna run --stream --scope beastcss-webpack-plugin release",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "postinstall": "yarn run bootstrap",
    "install-test-webpack-versions": "./scripts/install-test-webpack-versions.sh",
    "pretest": "yarn run install-test-webpack-versions",
    "test": "jest",
    "test:inspect": "NODE_OPTIONS='--inspect' yarn run test --runInBand"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@types/node": "16.11.48",
    "@types/webpack": "5.28.0",
    "@types/webpack-sources": "3.2.0",
    "commit-and-tag-version": "10.1.0",
    "commitizen": "4.2.5",
    "cz-conventional-changelog": "3.3.0",
    "es-jest": "2.0.0",
    "eslint": "8.21.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.8.2",
    "eslint-plugin-jsdoc": "39.3.6",
    "jest": "28.1.3",
    "lerna": "5.4.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "rollup": "2.77.3",
    "rollup-plugin-copy": "3.4.0",
    "simple-git-hooks": "2.8.0"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn run lint-staged --concurrent false",
    "prepare-commit-msg": "cat $1 | npx commitlint -q || (exec < /dev/tty && node_modules/.bin/cz --hook || true)",
    "commit-msg": "npx --no -- commitlint --edit $1"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "packages/*/src/**/*.js": [
      "eslint --cache --fix"
    ]
  }
}
